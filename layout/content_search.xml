<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.easyeats.SearchActivity"
    tools:showIn="@layout/app_bar_search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="413dp"
                android:layout_height="135dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/searchveg"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_below="@+id/imageView3"
                android:text="First Ingredient" />

            <EditText
                android:id="@+id/ingText1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText1"
                android:layout_alignStart="@+id/ingText1"
                android:layout_below="@+id/ingText1"
                android:text="Second Ingredient" />

            <EditText
                android:id="@+id/ingText2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText1"
                android:layout_alignStart="@+id/ingText1"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="9dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText2"
                android:layout_alignStart="@+id/ingText2"
                android:layout_below="@+id/ingText2"
                android:text="Third Ingredient" />

            <EditText
                android:id="@+id/ingText3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/ingText3"
                android:layout_marginTop="9dp"
                android:text="Fourth Ingredient" />

            <EditText
                android:id="@+id/ingText4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText3"
                android:layout_alignStart="@+id/ingText3"
                android:layout_below="@+id/textView9"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText5"
                android:layout_alignStart="@+id/ingText5"
                android:layout_below="@+id/ingText4"
                android:layout_marginTop="11dp"
                android:text="Fifth Ingredient" />

            <EditText
                android:id="@+id/ingText5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingText4"
                android:layout_alignStart="@+id/ingText4"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/searchbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingText5"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:text="Button" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
